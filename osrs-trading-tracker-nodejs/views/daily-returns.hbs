<script>
    // Jump to date from date picker
    function jumpToDate() {
        const dateSelector = document.getElementById('dateSelector');
        const selectedDate = dateSelector.value;

        if (!selectedDate) {
            alert('Please select a date first!');
            return;
        }

        scrollToDate(selectedDate);
    }

    // Smooth scroll to specific date
    function scrollToDate(targetDate) {
        const cards = document.querySelectorAll('.daily-card[data-date]');
        let targetCard = null;

        cards.forEach(card => {
            if (card.getAttribute('data-date') === targetDate) {
                targetCard = card;
            }
        });

        if (targetCard) {
            // Add highlight effect
            targetCard.style.border = '6px solid var(--osrs-gold)';
            targetCard.style.boxShadow = '0 0 30px rgba(255,215,0,0.8)';

            // Smooth scroll
            targetCard.scrollIntoView({
                behavior: 'smooth',
                block: 'center'
            });

            // Remove highlight after 3 seconds
            setTimeout(() => {
                targetCard.style.border = '6px solid var(--osrs-brown)';
                targetCard.style.boxShadow = '';
            }, 3000);
        } else {
            alert('No trading data found for ' + new Date(targetDate).toLocaleDateString() + '. Try a different date!');
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        console.log('Daily returns page loaded successfully!');

        // Set date picker to today by default
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('dateSelector').value = today;
    });
</script>