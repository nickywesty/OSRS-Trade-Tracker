        60% { transform: translateY(-5px); }
    }

    .rune-divider {
        text-align: center;
        margin: 30px 0;
        color: var(--osrs-gold);
        font-size: 2rem;
    }

    .status-badge-finished {
        background: linear-gradient(135deg, var(--osrs-green), #32CD32);
